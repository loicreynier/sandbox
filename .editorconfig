root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_width = 78
indent_style = space
indent_size = 4

[*.md]
indent_size = unset
trim_trailing_whitespace = false

[*.{c,nix,yaml,typ}]
indent_size = 2

[{Justfile,Makefile}]
indent_style = tab

[*.lock]
indent_size = unset
indent_style = unset
